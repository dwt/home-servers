#!/bin/bash

set -x
set -eo pipefail
HOST=${1:-pi}
IP_ADDRESS=${2:-$HOST}

here=$(dirname $0)

get_sops_secret() {
    local secret_name=$1
    sops decrypt hosts/$HOST/secrets.yaml | yq -r "$secret_name"
}

write_private_key() {
    local target_filename=$1
    local permissions=$2
    $here/insecure-ssh $IP_ADDRESS "sudo tee $target_filename  > /dev/null"
    $here/insecure-ssh $IP_ADDRESS "sudo chmod $permissions $target_filename"
}

deploy_private_key() {
    local secret_name=$1
    local permissions=$2
    local target_filename="/etc/ssh/${secret_name}"
    get_sops_secret ".ssh[\"${secret_name}\"]" | write_private_key $target_filename $permissions
}

refresh_key() {
    ssh-keygen -R "$IP_ADDRESS)"
    ssh-keyscan "$IP_ADDRESS" >>~/.ssh/known_hosts
}

deploy_private_key 'ssh_host_ed25519_key' 'u=rw,go='
deploy_private_key 'ssh_host_ed25519_key.pub' 'u=rw,go=r'
$here/insecure-ssh $IP_ADDRESS "sudo systemctl restart sshd"
refresh_key
$here/insecure-ssh $IP_ADDRESS "sudo systemctl reboot"
