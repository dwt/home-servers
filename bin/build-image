#!/usr/bin/env bash

HOST=${HOST:-pi}

# build image
nom build ".#nixosConfigurations.$HOST.config.system.build.sdImage"

# copy image out of nix store
if [ -L nixos-sd.img ]; then
    rm nixos-sd.img
fi
ln -s result/sd-image/nixos-*image*.img nixos-sd.img

# then flash to sd card with
# bin/flash-image
